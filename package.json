{
  "name": "gemini-api",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:rollup": "rollup -c --silent --watch --no-watch.clearScreen",
    "dev:tailwind": "tailwind -i assets/style/main.pcss -o static/style/main.css -w",
    "build": "run-p build:*",
    "build:rollup": "rollup -c",
    "build:tailwind": "tailwindcss -i assets/style/main.pcss -o static/style/main.css --minify"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@tailwindcss/typography": "^0.5.15",
    "daisyui": "^4.12.13",
    "npm-run-all": "^4.1.5",
    "rollup": "^4.24.0",
    "rollup-plugin-copy": "^3.5.0",
    "tailwindcss": "^3.4.14"
  },
  "dependencies": {
    "@fontsource-variable/inter": "^5.1.0",
    "@fontsource-variable/vazirmatn": "^5.1.0",
    "axios": "^1.7.7",
    "showdown": "^2.1.0"
  }
}
